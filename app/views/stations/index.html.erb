<h1>Stations</h1>

<table>
  <tr>
    <th>Contract</th>
    <th>Number</th>
    <th>Name</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Statuses</th>
  </tr>

  <% @stations.each do |station| %>
    <tr>
      <td><%= station.contract_name %></td>
      <td><%= station.number %></td>
      <td><%= station.name %></td>
      <td><%= station.address %></td>
      <td><%= station.latitude %></td>
      <td><%= station.longitude %></td>
      <td><%= station.station_statuses.count %></td>
    </tr>
  <% end%>
</table>
